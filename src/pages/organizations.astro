---
import Layout from '../layouts/Layout.astro';
import { organizations } from '../data/organizations.json';
---

<Layout title="組織一覧 - かろEarth Wiki">
	<head>
  		<title>【公式】かろEarth Wiki</title>
  		<meta name="description" content="かろEarthの公式Wikiです。様々な情報が載っています" />
  		<meta name="robots" content="index, follow" /> <!-- クローラーにインデックスを許可 -->
  		<meta property="og:title" content="【公式】かろEarth Wiki" />
  		<meta property="og:description" content="かろEarthの公式Wikiです。様々な情報が載っています" />
  		<meta property="og:type" content="website" />
  		<meta property="og:url" content="https://wiki.karoearth.xyz" />
  	  <meta property="og:image" content="https://wiki.karoearth.xyz/src/images/title.png" />
	</head>

<body>
    <div class="flex flex-col lg:flex-row lg:items-start lg:gap-0">
      <!-- サイドバー -->
      <aside
        class="w-full lg:w-64 bg-gray-100 p-6 h-auto border-b lg:border-b-0 border-gray-200"
      >
      <h2 class="text-xl font-bold mb-4">組織一覧</h2>
      <input
        type="text"
        placeholder="検索"
        class="w-full p-2 mb-4 rounded border border-gray-300"
        onInput={(e) => (searchQuery = e.target.value)}
      />
      <ul class="space-y-2">
        {organizations.map((org) => (
          <li>
            <a
              href={`#${org.name}`}
              class="block p-2 rounded hover:bg-gray-200"
            >
              {org.name}
            </a>
          </li>
        ))}
      </ul>
      </aside>

      <main class="flex-1 p-0 main">
        <div>
        <h1 class="text-4xl font-bold mb-8 text-center">組織一覧</h1>

        <div class="space-y-12">
          {organizations.map((org) => (
            <section
              id={org.name}
              class="bg-white p-8 rounded-lg shadow-lg"
            >
              <div class="border-b-2 border-gray-200 pb-6 mb-6">
                <h2 class="text-3xl font-bold mb-4">{org.name}</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-3">
                    <div>
                      <span class="font-semibold">設立日：</span>
                      <span class="font-serif">{org.foundedDate}</span>
                    </div>
                    <div>
                      <span class="font-semibold">本拠地：</span>
                      <span>{org.headquarters}</span>
                    </div>
                    <div>
                      <span class="font-semibold">活動内容：</span>
                      <p class="mt-1">{org.activities}</p>
                    </div>
					<div>
                        <span class="font-semibold">説明文：</span>
                        <p class="mt-1">
							{org.description.split("\n").map((line, index) => (
    							<>
      								{line}
      								{index < org.description.split("\n").length - 1 && <br />}
    							</>
 							))}
						</p>
                    </div>
                  </div>
                </div>
              </div>              
            </section>
          ))}
          </div>
        </div>
      </main>
    </div>
  </body>
</Layout>

<style>
  html {
    font-family: system-ui, sans-serif;
    background: #f6f6f6;
    font-size: 25px;
  }

  main {
    margin-top: 5%;
    margin-bottom: 5%;
    transform: scale(1);

  }
  aside {
    margin-top: 5%;
    margin-bottom: 5%;
    transform: scale(1);
  }

  @media (max-width: 1024px) {
    /* スマホ・タブレット表示の設定 */
    .flex {
      flex-direction: column; /* 縦並びにする */
    }

    aside {
      width: 90%; /* サイドバーを全幅に */
    }

    main {
      padding-top: 0;
    }
      main {
    margin-top: 20%;
    margin-bottom: 25%;
    transform: scale(1.2);

  }
  aside {
    margin-top: 20%;
    margin-bottom: 20%;
    transform: scale(1.3);
  }
  }

  @media (min-width: 1025px) {
    /* デスクトップ表示の設定 */
    .flex {
      flex-direction: row; /* 横並びに戻す */
    }

    aside {
      width: 16rem; /* デスクトップでは固定幅 */
    }
  }
    @media (max-width: 768px) {
    /* スマホ表示の設定 */
    section {
      width: 90%; /* 各国家セクションの幅を90%に調整 */
      margin: 0 auto; /* セクションを中央揃え */
    }

    aside {
      padding: 1rem; /* サイドバーの余白を調整 */
    }

    main {
      padding: 1rem; /* メインコンテンツの余白を調整 */
    }
  }
  .flex {
    flex-grow: 1;
  }
</style>